<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/primary_light"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_margin="10dp"
            android:id="@+id/music_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="5dp"
            android:background="@color/primary_dark"
            android:src="@drawable/music_icon"
            app:shapeAppearanceOverlay="@style/roundedImageStyle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/songName_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/music_icon"
            android:text="Take me to church"
            android:fontFamily="sans-serif-light"
            android:textSize="18sp"
            android:layout_toRightOf="@id/music_icon"
            android:textColor="@color/white"

            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/artistName_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/songName_textView"
            android:fontFamily="sans-serif-light"
            android:layout_toRightOf="@id/music_icon"
            android:text="Hozier"
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/musicPlaying_animation"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/options_button"
            android:padding="10dp"
            app:lottie_rawRes="@raw/music_anime"
            android:scaleType="centerCrop"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="invisible"
            />

        <soup.neumorphism.NeumorphFloatingActionButton
            android:id="@+id/options_button"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:src="@drawable/options_icon"
            app:neumorph_shadowElevation="0dp"
            app:neumorph_shadowColorDark="@color/primary_dark"
            app:neumorph_shadowColorLight="@color/primary_dark"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
    </RelativeLayout>


</androidx.cardview.widget.CardView>